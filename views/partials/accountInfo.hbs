<div id="accountInfoWrap">
    <div id="accountPictureWrap">
        <div id="accountPicture"></div>
    </div>
    <div id="accountUsername">GUEST</div>
    <div id="accountMenuOpenButtonWrap">
        <div id="accountMenuOpenButton"></div>
    </div>
    <div id="accountMenuWrap">
        <div class="cards" id="accountMenu">

            <div class="accountMenuOptions" id="accountMenuOptionProfile" onclick="window.location='/profile'">PROFILE</div>

            <div class="accountMenuOptions" id="accountMenuOptionLogin" onclick="showLoginWindow()">LOGIN</div>
            <div class="accountMenuOptions" id="accountMenuOptionLogout" onclick="logout()">LOGOUT</div>
        </div>
    </div>
</div>
