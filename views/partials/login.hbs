<link rel="stylesheet" type="text/css" href="styles/login.css">
<div id="overlayWindow">
    <div class="cards" id="loginWrap">
        <div class="loginFieldWrap">
            <input name="input" class="cards loginInputText" type="text" id="loginInputUsername" placeholder="username" />
        </div>
        <div class="loginFieldWrap">
            <input name="input" class="cards loginInputText" type="password" id="loginInputPassword" placeholder="password" />
        </div>
        <div class="loginFieldWrap">
            <input class="cards buttons loginInputButtons" type="button" onclick="window.location = '/register'" value="REGISTER" />
            <input class="cards buttons loginInputButtons" type="button" onclick="login();" value="LOGIN" />
        </div>
    </div>
</div>
<script src="javascripts/login.js"></script>
